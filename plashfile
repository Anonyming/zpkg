--from
alpine

--run
apk add --no-cache curl gnupg python3 xz

--layer
--run

curl -Lf https://github.com/ihucos/plash/archive/master.tar.gz | tar -xzC / --strip-components=1

down() {
  curl -Lf "$1" > /usr/local/bin/"$2"
  chmod +x        /usr/local/bin/"$2"
}
down https://github.com/ihucos/build-fuse-overlayfs/releases/download/03-04-2019/fuse-overlayfs fuse-overlayfs
down https://raw.githubusercontent.com/ihucos/zpkg/master/run run
down https://raw.githubusercontent.com/ihucos/zpkg/master/zpkg origzpkg
down https://raw.githubusercontent.com/ihucos/zpkg/master/bootstrap.sh bootstrap.sh

--entrypoint
/usr/local/bin/zpkg
--write-script
/usr/local/bin/zpkg
#!/bin/sh
export PLASH_INIT_UNION_TASTE=fuse-overlayfs
exec origzpkg "$@"
