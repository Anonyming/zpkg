--from alpine

--apk python3 unionfs-fuse gnupg bash curl

--layer
--run
curl -Lf https://github.com/ihucos/plash/archive/master.tar.gz | tar -xzC / --strip-components=1
curl --location --fail "https://github.com/ihucos/bchroot/releases/download/0.3/bchroot" > /usr/local/bin/bchroot
chmod 744 /usr/local/bin/bchroot

--layer
--hash-path ./zpkg
--run
cp ./zpkg /usr/local/bin/zpkg
