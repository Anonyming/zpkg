--from
alpine

--inline
apk add --no-cache
curl
gnupg
python3
xz

--layer
--invalidate-layer
--run

curl -Lf https://github.com/ihucos/plash/archive/master.tar.gz | tar -xzC / --strip-components=1
cp build/fuse-overlayfs /usr/local/bin
cp build/bchroot        /usr/local/bin
cp ../zpkg              /usr/local/bin/origzpkg
cp ../bootstrap.sh      /usr/local/bin

--entrypoint
/usr/local/bin/zpkg
--write-script
/usr/local/bin/zpkg
#!/bin/sh
export PLASH_INIT_UNION_TASTE=fuse-overlayfs
exec origzpkg "$@"

