#!/usr/bin/env plash-exec

--from
alpine

--apk
curl
gnupg
python3

--layer
--run
curl -Lf https://github.com/ihucos/plash/archive/master.tar.gz | tar -xzC / --strip-components=1

--layer
--hash-path ./fuse-overlayfs ./zpkg

--layer
--run
cp fuse-overlayfs /usr/local/bin
cp zpkg           /usr/local/bin/origzpkg
cp bootstrap.sh   /usr/local/bin
curl -Lf https://github.com/ihucos/bchroot/releases/download/0.3/bchroot > /usr/local/bin/bchroot
chmod +x /usr/local/bin/bchroot

--entrypoint
/usr/local/bin/zpkg
--write-script
/usr/local/bin/zpkg
#!/bin/sh
export PLASH_INIT_UNION_TASTE=fuse-overlayfs
exec origzpkg "$@"

